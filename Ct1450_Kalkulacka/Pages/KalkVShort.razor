@page "/kalkVShort"
<PageTitle>Kalkulačka V1</PageTitle>

<h1>Základní matematické operace</h1>
<hr />
<label>Číslo 1: <input @bind="cislo1" /></label>
<br />
<label>Číslo 2: <input @bind="cislo2" /></label>
<div class="m-3">
    <button @onclick="Soucet" class="btn" style="width:130px">Součet (+)</button>
    <button @onclick="Rozdil" class="btn btn-primary" style="width:130px">Rozdíl (-)</button>
    <button @onclick="Soucin" class="btn btn-secondary" style="width:130px">Součin (*)</button>
    <button @onclick="Podil" class="btn btn-success" style="width:130px">Podíl (/)</button>
</div>
<label>Výsledek: <input @bind="vysledek" readonly /></label>

@code {
    private short cislo1;
    private short cislo2;
    private short vysledek;

    /// <summary>
    /// Soucet 2 cisel
    /// </summary>
    private void Soucet()
    {
        vysledek = (short)(cislo1 + cislo2); //hjldak
    }
    /// <summary>
    /// Rodil 2 cisel
    /// </summary>
    private void Rozdil()
    {
        vysledek = (short)(cislo1 - cislo2); //hjldak
    }
    /// <summary>
    /// Soucin 2 cisel
    /// </summary>
    private void Soucin()
    {
        vysledek = (short)(cislo1 * cislo2); //hjldak
    }
    /// <summary>
    /// Podil 2 cisel
    /// </summary>
    private void Podil()
    {
        vysledek = (short)(cislo1 / cislo2); //hjldak
    }
}
}
